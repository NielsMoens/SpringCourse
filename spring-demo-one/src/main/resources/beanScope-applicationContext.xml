<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Define your beans here -->
    <bean id="myFortuneService"
          class="com.luv2code.springdemoone.RandomFortuneService">
    </bean>

    <bean id="myCoach"
          class="com.luv2code.springdemoone.TrackCoach">

        <!-- set up constructor injection-->
        <constructor-arg ref="myFortuneService"/>
    </bean>

    <bean id="myCricketCoach"
          class="com.luv2code.springdemoone.CricketCoach">

        <!-- set up constructor injection-->
        <property name="fortuneService" ref="myFortuneService"/>

        <!--        inject literal values-->
        <property name="emailAddress" value="${fons.email}"/>
        <property name="team" value="${fons.team}"/>
    </bean>

    <bean id="myGolfCoach" class="com.luv2code.springdemoone.GolfCoach">

        <!-- set up constructor injection-->
        <constructor-arg ref="myFortuneService"/>
    </bean>
</beans>





